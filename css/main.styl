body
    margin 0
    padding 0
    box-sizing border-box
    font-size 16px

.top-bar .navbar-nav li a
    font-size 16px

.top-bar .navbar-nav li a:hover
    color  rgb(110, 157, 208)
    font-size 16px

.header-banner
    height 400px
    background rgb(171, 172, 172) url(../img/grey-man.png) no-repeat right bottom
    background-size: auto 380px;
    margin-bottom 15px
    .jumbotron-text
        text-align center
        h1
            font-size 50px
            color #fff
            margin-bottom 30px
        p
            color #fff
            font-size 25px
            font-weight 400
            margin-bottom 30px
        .btn
            padding 10px 36px


section.logos .logos-list
    list-style-type none
    display flex
    justify-content space-around
    margin 0
    & > li:first-child
        line-height 40px
        text-transform uppercase
        font-weight 800

div.subscribe
    background rgb(23, 184, 231);
    margin-top 15px
    font-size 15px
    .subscribe-container
        padding 25px 0
        color #fff
        h3
            margin 0 0 15px 0
            padding-left 15px
            font-size 24px

    .subscribe-buttons
        a
          display inline-block
        a:first-child
            margin-right 10px
        img
            max-width 200px
            height 78px

section.guests
    padding 30px 0 30px
    h2
      text-align center
      margin 0
      span
          color rgb(23, 184, 231)
.guests-container
    padding 40px 20px
    img
        display block
        width 150px
        height auto
        margin auto
    .guest-text
        h2
            color rgb(23, 184, 231)
            margin 0
            font-size: 20px
            font-weight: 400
            text-align left
            line-height 1.25
        p
            margin-top 5px
            font-size 13px
            line-height 1.7
