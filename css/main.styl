body
    padding 0
    box-sizing border-box
    font-size 16px
    h2
        margin 0
.page-wrapper
    width 1170px
    margin 0 auto
.text-white
    color #fff
.colored-text
    color rgb(23, 184, 231)
.top-bar
    background white
    .navbar-default
        background white
        border none

.top-bar .navbar-nav li a
    font-size 16px

.top-bar .navbar-nav li a:hover
    color rgb(23, 184, 231)
    font-size 16px

.header-banner
    height 400px
    background rgb(171, 172, 172) url(../img/grey-man.png) no-repeat right bottom
    background-size: auto 380px;
    margin-bottom 15px
    .jumbotron-text
        text-align center
        h1
            font-size 50px
            color #fff
            margin-bottom 30px
        p
            color #fff
            font-size 25px
            font-weight 400
            margin-bottom 30px
        .btn
            padding 10px 36px
.page-wrapper
    .container
        width: 970px
    .main-header
    .logos
        .container
            width 1170px

section.logos .logos-list
    list-style-type none
    display flex
    justify-content space-around
    margin 0
    & > li:first-child
        line-height 40px
        text-transform uppercase
        font-weight 800

div.subscribe
    background rgb(23, 184, 231)
    margin-top 15px
    font-size 15px
    .subscribe-container
        padding 25px 0
        color #fff
        p
            padding-left 24px
        h3
            margin 0 0 15px 0
            padding-left 15px
            font-size 24px

    .subscribe-buttons
        a
          display inline-block
        a:first-child
            margin-right 10px
        img
            max-width 200px
            height 78px

section.guests
section.latest
    padding 35px 0 30px
    h2
      text-align center
.guests-container
    padding 40px 20px
    img
        display block
        width 150px
        height auto
        margin auto
    .guest-text
        h3
            color rgb(23, 184, 231)
            margin 0
            font-size: 20px
            font-weight: 400
            text-align left
            line-height 1.25
        p
            margin-top 5px
            font-size 13px
            line-height 1.7
section.latest
    background rgb(25, 25, 25)
    .latest-article
        img
            width 200px
            height auto
            display: block;
            margin: auto;
    .latest-text
        margin-top 40px
        h3
            color rgb(23, 184, 231)
            margin 0
            font-size: 20px
            font-weight: 400
            text-align left
        p
            margin 5px 0 3px 0
            font-size 13px
            line-height 1.7
        a
            font-size 13px
            color rgb(23, 184, 231)

    .latest-container
    .guests-container
        padding 40px 20px

    .latest-container > a
        display inline-block
        color rgb(23, 184, 231)
        margin: 20px 0 0 8px

    .btn-container
        .btn
            display block
            padding 5px 10px
            border 3px solid rgb(23, 184, 231)
            width 200px
            font-size 22px
            color rgb(23, 184, 231)
            margin 0 auto 25px
        .btn:hover
            color #fff
            background rgb(23, 184, 231)
.popular-container
    padding 40px 10px 30px 35px
    .popular-wrapper
        margin 35px 0 15px
        display inline-block
        article
            margin 0 0 25px 0

    .popular-text
        padding 0 20px
        p
            line-height 1.7
            font-size 14px
    h3
        margin 0 0 5px 0
        font-size 23px
    .popular-img
        padding 0
        img
            width 170px
            height auto
            display block

.facebook-section
    padding 40px 10px 30px 35px
    .fb-block
        margin-top 35px
        background rgb(203, 203, 202)
        height 760px
    .fb-block ul
        list-style-type none
        padding 0
        height: inherit;
        display flex
        flex-direction column
        align-items center
        justify-content center
        li
            font-weight 700
            text-transform uppercase
.to-consume
    padding 30px 10px
    text-align center
    background rgb(203, 203, 202)
    .images-block
        margin-top 20px
    .img-circle
        background rgb(38,38,38)
        height 150px
        width 150px
        margin auto
        .text
            color #fff
            position relative
            top 60px
.top-footer
    padding 30px 10px
    background rgb(21, 20, 20)
    .footer-text
        p
            font-size 14px
            font-weight 100
        h2
            margin-bottom 30px
    .footer-buttons
        text-align center
        h2
            line-height 1.3
        a
            display inline-block
            padding 10px 20px
            width 250px
            color #fff
            border 1px solid #fff
            margin-top 20px
            font-weight 600
        a:hover
            background #fff
            color rgb(23, 184, 231)
.bottom-footer
    background rgb(38,38,38)
    padding 10px 0
    text-align center
